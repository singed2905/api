# =============================================================================
# Geometry Calculator API - Environment Configuration Template
# =============================================================================
# Copy file này thành .env và điền các giá trị phù hợp cho environment của bạn

# =============================================================================
# API SETTINGS
# =============================================================================
# Debug mode (true cho development, false cho production)
DEBUG=true

# Server configuration
HOST=0.0.0.0
PORT=8000

# API metadata
APP_NAME="Geometry Calculator API"
APP_VERSION="2.1.0"

# =============================================================================
# FILE PROCESSING SETTINGS
# =============================================================================
# Maximum file size for uploads (bytes) - 100MB default
MAX_FILE_SIZE=104857600

# Directories for file operations
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs
CONFIG_DIR=config
LOGS_DIR=logs

# Large file threshold (bytes) - 50MB default
LARGE_FILE_THRESHOLD=52428800

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# CORS allowed origins (comma-separated)
# For development: ["*"]
# For production: ["https://yourdomain.com","https://app.yourdomain.com"]
ALLOWED_ORIGINS=["*"]

# Allowed file types for upload
ALLOWED_FILE_TYPES=[".xlsx", ".xls"]

# Optional: JWT secret key (generate random string for production)
# SECRET_KEY=your-super-secret-key-here

# Optional: API key for authentication
# API_KEY=your-api-key-here

# =============================================================================
# PROCESSING SETTINGS
# =============================================================================
# Chunk size for batch processing
CHUNK_SIZE=1000

# Maximum number of concurrent background tasks
MAX_BACKGROUND_TASKS=5

# File cleanup interval (hours)
CLEANUP_INTERVAL_HOURS=24

# Processing timeout (seconds)
PROCESSING_TIMEOUT=300

# =============================================================================
# GEOMETRY SERVICE SETTINGS
# =============================================================================
# Default calculator version
DEFAULT_CALCULATOR_VERSION=fx799

# Supported calculator versions (comma-separated)
SUPPORTED_VERSIONS=["fx799", "fx991", "fx570", "fx880", "fx801"]

# =============================================================================
# DATABASE SETTINGS (Optional)
# =============================================================================
# SQLite database URL (cho local development)
DATABASE_URL=sqlite:///./geometry_api.db

# PostgreSQL example (cho production)
# DATABASE_URL=postgresql://user:password@localhost/geometry_api

# =============================================================================
# REDIS SETTINGS (Optional - cho caching)
# =============================================================================
# Redis URL cho caching
# REDIS_URL=redis://localhost:6379/0

# Cache expiration time (seconds)
# CACHE_EXPIRE_TIME=3600

# =============================================================================
# LOGGING SETTINGS
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/geometry_api.log

# Log rotation (MB)
LOG_MAX_SIZE=10

# Number of backup log files
LOG_BACKUP_COUNT=5

# =============================================================================
# MONITORING SETTINGS (Optional)
# =============================================================================
# Enable health check endpoint
ENCODE_HEALTH_CHECK=true

# Enable metrics collection
# ENABLE_METRICS=false

# Metrics endpoint path
# METRICS_PATH=/metrics

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable auto-reload (development only)
AUTO_RELOAD=true

# Enable detailed error messages
DETAILED_ERRORS=true

# Enable OpenAPI documentation
ENABLE_DOCS=true

# Documentation URL paths
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json
